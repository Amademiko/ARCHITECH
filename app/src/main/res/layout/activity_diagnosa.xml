<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Diagnosa"
    android:background="@drawable/bgappss">


    <ImageView
        android:layout_width="338dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/hdiagnosa" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bagian Kepala"
            android:textSize="30dp"
            android:gravity="center"/>


            <CheckBox
                android:id="@+id/sakitKepala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="Sakit kepala"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />


            <CheckBox
                android:id="@+id/pilek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Pilek dan hidung tersumbat"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />


            <CheckBox
                android:id="@+id/mataMerah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Mata merah"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/mataBerair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Mata berair"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/bercakMerah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Bercak merah pada tenggorokan hidung dan mata"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/airHidungBerlebih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Produksi berlebih cairan hidung"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/hidungBerair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Hidung berair"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/mataGatal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Mata gatal dan sakit"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/belek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Belek"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/bengkak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Pembengkakan daerah kepala"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:onClick="solusiLayout"
                android:text="PERIKSA"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />


        </LinearLayout>


    </ScrollView>




</RelativeLayout>